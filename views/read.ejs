<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <div class="main w-full min-h-screen h-full bg-zinc-900 p-10 text-white">
        <div class="nav ">
            <a href="/" class="text-blue-600">Home</a>
        </div>
        <h1 class="text-3xl py-4 px-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
           <% users.forEach(function(val){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-72 rounded-lg bg-blue-400">
                  <img src="<%=val.image %>" alt="dorara" class="w-full h-full object-cover overflow-hidden">  
                </div>
                <h2 class="text-xl mt-3"><%=val.name %></h2>
                <h5 class="text-zinc-400"><%=val.email %></h5>
                <div class="flex gap-12 mt-8">
                    <a href="/edit/<%= val._id%>" class="text-yellow-300">Edit User</a>
                    <a href="/delete/<%= val._id%>" class="text-red-500">Delete User</a>
                </div>
            </div>
          <% })  %>
            
        </div>
    </div>
</body>
</html>
